{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "typeRoots" : ["types"],
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "ES5",
    "types": ["node", "core-js", "isomorphic-fetch"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}